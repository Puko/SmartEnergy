<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
    x:Class="SmartEnergy.Controls.GraphicSceneControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:SmartEnergy.ViewModels"
    x:Name="Scroll"
    x:DataType="viewModels:AddEditSceneViewModel"
    BackgroundColor="White"
    Orientation="Both"
    SizeChanged="Grid_OnHandlerChanged">
    <Grid
        x:Name="MainGrid"
        BackgroundColor="Transparent"
        HorizontalOptions="FillAndExpand">

        <AbsoluteLayout x:Name="Grid" ZIndex="10" />

    </Grid>
</ScrollView>
